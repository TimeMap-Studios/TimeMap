<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/beige</item>
        <item name="colorOnPrimary">@color/dark_beige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/beige</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_brown</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TimeMap.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TimeMap.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TimeMap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
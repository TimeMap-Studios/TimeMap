<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <!-- Título del fragmento -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuraciones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"/> <!-- Márgen inferior de 16dp -->

    <!-- Switch para mostrar eventos pasados -->
    <Switch
        android:id="@+id/switchShowPastEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar eventos pasados"
        android:textSize="22sp"
        android:padding="4dp"
        android:layout_marginBottom="12dp"/> <!-- Márgen inferior de 8dp -->

    <!-- Switch para activar/desactivar notificaciones -->
    <Switch
        android:id="@+id/switchNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:textSize="22sp"
        android:padding="4dp"
        android:layout_marginBottom="12dp"/> <!-- Márgen inferior de 8dp -->

    <!-- Botón para guardar cambios en las configuraciones -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/> <!-- Márgen superior de 16dp -->

    <!-- Agrega más vistas y elementos UI según tus necesidades -->

</LinearLayout>